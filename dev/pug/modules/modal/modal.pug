.modal.modalRegForm(style="display: none;")
    .modal__box.modal__box-row(style="background-image: url('static/images/Background_registration_popup.jpg');')")
        span.close.close-white
        .regFormText
            .regFormText__title Join for free
            ul
                li Get access to the profiles of girls
                li Make video dates
                li Make meetings live
                li Book Dating tours
        .regForm
            form
                .regForm__box
                    .regForm__title LOGIN WITH
                    .regForm__social
                        a.socialLink.fb(href="#")
                        a.socialLink.gg(href="#")
                    .regForm__title.regForm__title-second OR SIGN IN VIA EMAIL ADDRESS
                    input.field(type="text" placeholder="Name" id="name" name="name")
                    input.field(type="number" placeholder="Age" id="age" name="age")
                    input.field(type="email" placeholder="Email" id="email" name="email")
                    input.field(type="password" placeholder="Password" id="password" name="password")
                    button.button#sendRegForm Sign up for free

.modal.modalNotEnoughMoney(style="display: none;")
    .modal__box
        span.close
        .modal__title Please top up your balance to proceed
        label Account Balance:	$15.00
        form
            input.field(type="text" placeholder="200" id="sum" name="sum")
            button.button#sendPay Add funds

.modal.modalSendLetter(style="display: none;")
    .modal__box
        span.close
        .modal__title SEND LETTER
        form
            .modal__boxInside
                input.field(type="text" placeholder="Your Email")
                input.field(type="text" placeholder="Subject")
                textarea.fieldTextarea
                .modal__btnGroup
                    button.button Sign up for free
                    button.button.button-transparent + Add a picture

