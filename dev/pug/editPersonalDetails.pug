extends template/main

block variables

    - var title = 'Мой профиль'

block content
    section.myProfileHeader
        .container
            .myProfileHeader__box
                .sidebar__title My Account
                .aboutProfile
                    .aboutProfile__box
                        .aboutProfile__text Fill out the profile to increase your chance to find the perfect lady
                        a.aboutProfile__button + Add personal details
                        .aboutProfile__strength
                            span Profile Strength: 15%
                            .percentLine(data-percent="15")
                                span
    section.myProfile
        .container
            .myProfile__box

                include modules/sidebar/sidebar
                .profile
                    .tabs
                        a.tabs__item(href="#") Main info
                        a.tabs__item.tabs__item-active(href="#") Personal Details
                        a.tabs__item(href="#") Ideal lady
                    .profile__content
                        .profile__DetailsList
                            .profile__DetailsItem
                                label.profileKey Your Children (if any, their age):
                                input.field(type="text")
                            .profile__DetailsItem
                                label.profileKey Would you like to have more children?
                                .controll__group
                                    select.field(type="range" name="age")
                                        option(value="Yes") Yes
                                        option(value="No") No
                            .profile__DetailsItem
                                label.profileKey Your education:
                                input.field(type="text")
                            .profile__DetailsItem
                                label.profileKey What is your current job?
                                input.field(type="text")
                            .profile__DetailsItem
                                label.profileKey Do you smoke?
                                .controll__group
                                    select.field(type="range" name="age")
                                        option(value="Yes") Yes
                                        option(value="No") No
                            .profile__DetailsItem
                                label.profileKey Can you tolerate lady's smoking?
                                .controll__group
                                    select.field(type="range" name="age")
                                        option(value="Yes") Yes
                                        option(value="No") No
                            .profile__DetailsItem
                                label.profileKey Height *
                                input.field(type="text")
                            .profile__DetailsItem
                                label.profileKey Weight *
                                input.field(type="text")
                            .profile__DetailsItem
                                label.profileKey What is your native language?
                                .controll__group
                                    select.field(type="range" name="age")
                                        option(value="En") En
                                        option(value="Ru") Ru
                                        option(value="Ua") Ua
                            .profile__DetailsItem
                                label.profileKey What foreign languages do you speak?
                                .controll__group
                                    select.field(type="range" name="age")
                                        option(value="Yes") Yes
                                        option(value="No") No
                            .profile__DetailsItem
                                label.profileKey Marital status:
                                .controll__group
                                    select.field(name="")
                                        option(value="Yes") Yes
                                        option(value="No") No
                            .profile__DetailsItem
                                label.profileKey If you are divorced, please, give us the termination dates of all your previous marriages
                                textarea.fieldTextarea
                            .profile__DetailsItem
                                label.profileKey Is social drinking acceptable for you?
                                .controll__group
                                    select.field(name="")
                                        option(value="Yes") Yes
                                        option(value="No") No
                            .profile__DetailsItem
                                label.profileKey Do you have any major health problems?
                                .controll__group
                                    select.field(name="")
                                        option(value="Yes") Yes
                                        option(value="No") No
                            .profile__DetailsItem
                                label.profileKey If yes then, please, specify:
                                input.field(type="text")
                            .profile__DetailsItem
                                label.profileKey Your hobbies and interests:
                                input.field(type="text")
                            .profile__DetailsItem
                                label.profileKey Your religion:
                                .controll__group
                                    select.field(name="religion")
                                        option(value="Christian") Christian
                                        option(value="other") other
                            .profile__DetailsItem
                                label.profileKey Description:
                                textarea.fieldTextarea
                            .profile__DetailsItem
                                label.profileKey Give at least 5 reasons why you can be good husband?
                                textarea.fieldTextarea
                            .profile__DetailsItem
                                label.profileKey How will a woman's live improve when she becomes your wife?
                                textarea.fieldTextarea
                            .profile__DetailsItem
                                label.profileKey Indicate city and country where you plan to reside when you get married?
                                .controll__group
                                    select.field(name="city")
                                        option(value="New York") New York
                                        option(value="London") London
                            .profile__DetailsItem
                                label.profileKey Do you own property where you live at the moment?
                                .controll__group
                                    select.field(name="age")
                                        option(value="Yes") Yes
                                        option(value="No") No
                            .profile__DetailsItem
                                label.profileKey Your annual income in USD or EUR
                                input.field(type="text")
                            .profile__DetailsItem
                                label.profileKey
                                .profile__buttonWrapper
                                    button.button Save
                                    button.button.button-tuscany Cancel